<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<AnchorPane fx:id="mainLayout" xmlns:fx="http://javafx.com/fxml"
            fx:controller="GameManager.MenuController">
    <ImageView fx:id="menuBackground">
        <image>
            <Image url="@../res/menuBackground.png"/>
        </image>
    </ImageView>

    <AnchorPane fx:id="menuLayout">
        <ImageView fx:id="btnPlayGame" visible="false">
            <image>
                <Image url="@../res/menuPlayGame.png"/>
            </image>
        </ImageView>

        <ImageView fx:id="btnHighScores" visible="false">
            <image>
                <Image url="@../res/menuBtnHighScores.png"/>
            </image>
        </ImageView>

        <ImageView fx:id="btnSetting" visible="false">
            <image>
                <Image url="@../res/menuBtnSetting.png"/>
            </image>
        </ImageView>

        <ImageView fx:id="btnExit" visible="false">
            <image>
                <Image url="@../res/menuBtnExit.png"/>
            </image>
        </ImageView>
    </AnchorPane>

    <AnchorPane fx:id="highScores">

    </AnchorPane>

    <AnchorPane fx:id="setting">

    </AnchorPane>

    <Label fx:id="loadingText"
           visible="false"
           text="Loading database..."
           layoutX="0" layoutY="0"
           alignment="center"
           prefWidth="1280" prefHeight="720"
           style="-fx-font-family: 'Press Start 2P';
              -fx-font-size: 28px;
              -fx-font-weight: bold;
              -fx-text-fill: red;
              -fx-background-color: rgba(0, 0, 0, 0.8);
              -fx-alignment: center;"/>

</AnchorPane>


