<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<AnchorPane fx:id="endGameLayout" xmlns:fx="http://javafx.com/fxml"
            fx:controller="GameManager.EndGameController"
            prefWidth="1280"  prefHeight="720">

    <ImageView fx:id="endGameBackground"
               fitWidth="1280"  fitHeight="720">
        <image>
            <Image url="@../res/gameOver.png"/>
        </image>
    </ImageView>

    <Label fx:id="loadingText"
           visible="false"
           text="Loading database..."
           layoutX="0" layoutY="0"
           alignment="center"
           prefWidth="1280" prefHeight="720"
           style="-fx-font-family: 'Press Start 2P';
              -fx-font-size: 28px;
              -fx-font-weight: bold;
              -fx-text-fill: red;
              -fx-background-color: rgba(0, 0, 0, 0.8);
              -fx-alignment: center;"/>
</AnchorPane>


