<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<StackPane prefHeight="450.0" prefWidth="300.0" style="-fx-background-color: #222; -fx-padding: 24;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GameManager.SettingController">

    <ImageView fx:id="settingBackground">
        <image>
            <Image url="@../res/settingBackground.png" />
        </image>
    </ImageView>

    <VBox alignment="CENTER" spacing="18">


        <Label style="-fx-font-size: 24; -fx-text-fill: white; -fx-font-weight: bold;" text="Cài Đặt Âm Thanh" />

        <Label style="-fx-text-fill: white;" text="Nhạc nền" />
        <Slider fx:id="bgmSlider" max="1" min="0" prefWidth="240" value="0.5" />

        <Label style="-fx-text-fill: white;" text="Hiệu ứng" />
        <Slider fx:id="sfxSlider" max="1" min="0" prefWidth="240" value="0.5" />

        <Button fx:id="btnClose" prefWidth="100" text="Đóng" />

    </VBox>

</StackPane>
