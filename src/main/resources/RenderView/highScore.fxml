<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ListView?>
<AnchorPane fx:id="highScoresLayout"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="GameManager.HighScoresController"
            style="-fx-background-color: black;">

    <VBox alignment="CENTER" spacing="30" prefWidth="800" prefHeight="600">
        <Label text="TOP HIGH SCORES"
               style="-fx-font-size: 36px; -fx-text-fill: yellow; -fx-font-family: 'Arcade';"/>

        <ListView fx:id="highScoreList"
                  prefWidth="400"
                  prefHeight="400"
                  style="-fx-control-inner-background: black;
                             -fx-text-fill: white;
                             -fx-border-color: white;
                             -fx-border-width: 2px;"/>
    </VBox>

</AnchorPane>

