           style="-fx-font-family: 'Press Start 2P'; -fx-font-size: 18px; -fx-text-fill: cyan;"/>
    <Label text="SCORE" layoutX="880" layoutY="260"
           style="-fx-font-family: 'Press Start 2P'; -fx-font-size: 18px; -fx-text-fill: cyan;"/>

    <Label fx:id="rank1" text="1." layoutX="360" layoutY="320"
           style="-fx-font-family: 'Press Start 2P'; -fx-font-size: 20px; -fx-text-fill: white;"/>
    <Label fx:id="name1" layoutX="520" layoutY="320"
           style="-fx-font-family: 'Press Start 2P'; -fx-font-size: 20px; -fx-text-fill: white;"/>
    <Label fx:id="score1" layoutX="880" layoutY="320"
           style="-fx-font-family: 'Press Start 2P'; -fx-font-size: 20px; -fx-text-fill: white;"/>

    <Label fx:id="rank2" text="2." layoutX="360" layoutY="370"
           style="-fx-font-family: 'Press Start 2P'; -fx-font-size: 20px; -fx-text-fill: white;"/>
    <Label fx:id="name2" layoutX="520" layoutY="370"
           style="-fx-font-family: 'Press Start 2P'; -fx-font-size: 20px; -fx-text-fill: white;"/>
    <Label fx:id="score2" layoutX="880" layoutY="370"
           style="-fx-font-family: 'Press Start 2P'; -fx-font-size: 20px; -fx-text-fill: white;"/>

    <Label fx:id="rank3" text="3." layoutX="360" layoutY="420"
           style="-fx-font-family: 'Press Start 2P'; -fx-font-size: 20px; -fx-text-fill: white;"/>
    <Label fx:id="name3" layoutX="520" layoutY="420"
           style="-fx-font-family: 'Press Start 2P'; -fx-font-size: 20px; -fx-text-fill: white;"/>
    <Label fx:id="score3" layoutX="880" layoutY="420"
           style="-fx-font-family: 'Press Start 2P'; -fx-font-size: 20px; -fx-text-fill: white;"/>

    <Label fx:id="rank4" text="4." layoutX="360" layoutY="470"
           style="-fx-font-family: 'Press Start 2P'; -fx-font-size: 20px; -fx-text-fill: white;"/>
    <Label fx:id="name4" layoutX="520" layoutY="470"
           style="-fx-font-family: 'Press Start 2P'; -fx-font-size: 20px; -fx-text-fill: white;"/>
    <Label fx:id="score4" layoutX="880" layoutY="470"
           style="-fx-font-family: 'Press Start 2P'; -fx-font-size: 20px; -fx-text-fill: white;"/>

    <Label fx:id="rank5" text="5." layoutX="360" layoutY="520"
           style="-fx-font-family: 'Press Start 2P'; -fx-font-size: 20px; -fx-text-fill: white;"/>
    <Label fx:id="name5" layoutX="520" layoutY="520"
           style="-fx-font-family: 'Press Start 2P'; -fx-font-size: 20px; -fx-text-fill: white;"/>
    <Label fx:id="score5" layoutX="880" layoutY="520"
           style="-fx-font-family: 'Press Start 2P'; -fx-font-size: 20px; -fx-text-fill: white;"/>

    <Button fx:id="backButton"
            text="BACK TO MENU"
            onAction="#onBackToMenu"
            layoutX="490" layoutY="650"
            prefWidth="300" prefHeight="50"
            style="-fx-font-family: 'Press Start 2P';
               -fx-font-size: 20px;
               -fx-text-fill: white;
               -fx-background-color: transparent;
               -fx-border-color: white;
               -fx-border-width: 2px;
               -fx-border-radius: 8px;
               -fx-cursor: hand;"/>

</AnchorPane>